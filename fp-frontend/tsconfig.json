{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "lib": [
            "es2015"
        ],
        "moduleResolution": "node",
        "strictNullChecks": false,
        "target": "es5",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "images/*": [
                "src/assets/images/*"
            ],
            "json/*": [
                "src/json/*"
            ],
            "model/*": [
                "src/model/*"
            ],
            "utils/*": [
                "src/utils/*"
            ],
            "db/*": [
                "src/db/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}