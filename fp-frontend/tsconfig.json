{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "lib": [
            "es2015"
        ],
        "moduleResolution": "node",
        "strictNullChecks": false,
        "target": "es5",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "src/components/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}